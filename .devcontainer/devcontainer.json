{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user pandas streamlit xlsxwriter",
  "postAttachCommand": {
    "server": "streamlit run app_interface.py --server.enableCORS false"
  },
  "forwardPorts": [8501]
}
